<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_color_theme_no_trans"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingRight="8dp" >

    <TextView
        android:id="@+id/undo_row_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="16dp"
        android:text="@string/reminder_undo_dismiss"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/undo_reminder_entry_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/app_color_theme_no_trans"
        android:drawableTop="@drawable/ic_action_undo"
        android:padding="16dp"
        android:paddingRight="8dp"
        android:text="@string/reminder_undo_label"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
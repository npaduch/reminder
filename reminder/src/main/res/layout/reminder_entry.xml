<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newNoteView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@drawable/shadow_red"
    tools:context=".MainActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/main_background_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_action_edit"/>

    <TextView
        android:id="@+id/reminderDetailText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/reminder_example"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/reminderTimeText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/reminder_time_beginning"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


</LinearLayout>